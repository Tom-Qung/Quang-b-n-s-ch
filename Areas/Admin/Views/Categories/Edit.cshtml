@*sẽ được truyền giữa trang Partial View và trang cha*@
@model _23DH112875_MyStore.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 class="bg-success">Cập nhật sản phẩm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*form con sẽ được nhúng vào form cha là Edit.cshtml và Create.cshtml   *@
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CategoryID)

    @*Nhúng Partial View vào form cha*@
    @Html.Partial("PVCreateEditCategory", Model)
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
